extends layout.pug

append styles
    link(rel='stylesheet' type='text/css' href='/stylesheets/favorites.css')

block link 
    -var active = 'Just A Nibble';

block content
    main(class='container')
        h1 Chef's favorites

        each recipe in recipes
            .col-lg-12
            .card.mx-auto.mb-5(style='width:40em;')
                img.card-img-top(src='https://www.bbcgoodfood.com/sites/default/files/recipe-collections/collection-image/2013/05/chorizo-mozarella-gnocchi-bake-cropped.jpg')
                if recipe.is_glutenFree || recipe.is_vegetarian || recipe.is_vegan || recipe.is_dairyFree
                    div.card-header.text-center
                        if recipe.is_glutenFree
                            div.tag.gf GF
                        if recipe.is_vegetarian
                            div.tag.v V
                        if recipe.is_vegan
                            div.tag.vg VG
                        if recipe.is_dairyFree
                            div.tag.df DF
                div.card-body
                    h5.card-title.text-center 
                        a(href='/recipes/' + recipe.recipe_id)= recipe.recipe_name
                    hr
                    div.row
                        div.col-sm-6.text-left.text-muted= recipe.difficulty
                        div.col-sm-6.text-right.text-muted= recipe.overall_time